SHELL		= /bin/sh
THIS		= sue
PACKAGE		= @PACKAGE@

#### Start of system configuration section. ####

top_srcdir	= @top_srcdir@
srcdir		= @srcdir@
srcdir_sl	= @srcdir@/
VPATH		= @srcdir@
@SET_MAKE@

prefix		= @prefix@
exec_prefix	= @exec_prefix@

bindir		= @bindir@
datadir		= @datadir@/@PACKAGE@

BINDIR		= $(DESTDIR)$(bindir)
DATADIR		= $(DESTDIR)$(datadir)

CC		= @CC@
CFLAGS		= @CFLAGS@ @EXTRA_CFLAGS@

CPP		= @CPP@
CPPFLAGS	= @CPPFLAGS@

LINK		= $(CC) $(CFLAGS)

INSTALL		= @INSTALL@
INSTALL_PROGRAM	= @INSTALL_PROGRAM@

o		= .@OBJEXT@
x		= @EXEEXT@
PROGS		= $(THIS)$x
SUDO_HACKS	= @SUDO_HACKS@
SUDO_USUAL	= @SUDO_USUAL@

.SUFFIXES: .c .i $o

.c.i:
	@RULE_CC@
	@ECHO_CC@$(CPP) -C $(CPPFLAGS) $< >$@
.c$o:
	@RULE_CC@
	@ECHO_CC@$(CC) -c $(CPPFLAGS) $(CFLAGS) $<

all : $(PROGS)

$(THIS)$x : $(THIS)$o
	@ECHO_LD@$(LINK) $(CFLAGS) $(LDFLAGS) -o $@ $(THIS)$o $(LIBS)

SUDO_LIST	= $(DATADIR)/setuid

install : $(PROGS) $(DATADIR) $(BINDIR)
	rm -f $(SUDO_LIST)
	$(SHELL) -c "for n in $(SUDO_HACKS); do echo \$$n >>$(SUDO_LIST); done"
	$(SHELL) $(srcdir)/use-hacks "$(INSTALL_PROGRAM)" "$(THIS)$x" "$(BINDIR)" $(SUDO_HACKS)
	$(SHELL) $(srcdir)/use-usual "$(INSTALL_PROGRAM)" "$(THIS)$x" "$(BINDIR)" $(SUDO_USUAL)

uninstall :
	$(SHELL) -c "for n in $(SUDO_HACKS) $(SUDO_USUAL); do echo ...removing \$$n; rm -f $(BINDIR)/\$$n; done"

clean :
	rm -f $(PROGS) *.o core
distclean : clean
	rm -f makefile

$(BINDIR) \
$(DATADIR) :
	mkdir -p $@
