# $Id: makefile.in,v 1.3 2020/10/25 18:19:30 tom Exp $

SHELL		= /bin/sh
THIS		= realpath

#### Start of system configuration section. ####

top_srcdir	= @top_srcdir@
srcdir		= @srcdir@
srcdir_sl	= @srcdir@/
VPATH		= @srcdir@
@SET_MAKE@

prefix		= @prefix@
exec_prefix	= @exec_prefix@

bindir		= @bindir@

BINDIR		= $(DESTDIR)$(bindir)

CC		= @CC@
CFLAGS		= @CFLAGS@ @EXTRA_CFLAGS@

CPP		= @CPP@
CPPFLAGS	= @CPPFLAGS@ -I$(top_srcdir)

LINK		= $(CC) $(CFLAGS)

INSTALL		= @INSTALL@
INSTALL_PROGRAM	= @INSTALL_PROGRAM@

LINT		= @LINT@
LINT_OPTS	= @LINT_OPTS@

o		= .@OBJEXT@
x		= @EXEEXT@
PROGS		= $(THIS)$x

.SUFFIXES: .c .i $o

.c.i:
	@RULE_CC@
	@ECHO_CC@$(CPP) -C $(CPPFLAGS) $< >$@
.c$o:
	@RULE_CC@
	@ECHO_CC@$(CC) -c $(CPPFLAGS) $(CFLAGS) $<

all : $(PROGS)

$(THIS)$x : $(THIS)$o
	@ECHO_LD@$(LINK) $(CFLAGS) $(LDFLAGS) -o $@ $(THIS)$o $(LIBS)

install : $(PROGS) $(BINDIR)
	$(INSTALL_PROGRAM) $(THIS)$x $(BINDIR)

uninstall :
	rm -f $(BINDIR)/$(THIS)$x

clean :
	rm -f $(PROGS) *.o core
distclean : clean
	rm -f makefile

lint: $(THIS).c
	$(LINT) $(LINT_OPTS) $(CPPFLAGS) $(THIS).c

$(BINDIR) :
	mkdir -p $@
